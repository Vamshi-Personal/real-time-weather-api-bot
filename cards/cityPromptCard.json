{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "text": "Please enter the city name:",
            "weight": "Bolder",
            "size": "Medium"
        },
        {
            "type": "Input.Text",
            "id": "city",
            "placeholder": "  ",
            "style": "Text"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Get Weather",
            "data": {
                "city": "${city}"  
            }
        }
    ]
}
 
